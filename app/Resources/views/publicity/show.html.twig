            <tr>
                <th>Id</th>
                <td>{{ publicities.iD }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ publicities.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ publicities.description }}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td>{{ publicities.video }}</td>
            </tr>
            <tr>
                <th>Zone</th>
                <td>{{ publicities.zone }}</td>
            </tr>
            <tr>
                <th>Datedebut</th>
                <td>  {{ publicities.dateDebut | date('d/m/Y') }}</td>

